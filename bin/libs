#!/bin/sh

LIBS=(
  node_modules/jquery/dist/jquery.js
  node_modules/jquery-ias/src/jquery-ias.js
)

# uglify doesn't like when we pass src file as args, so use cat
cat $LIBS | npx uglifyjs --compress > assets/js/libs.js
# to uglify materialize-css is to fail
cat node_modules/materialize-css/dist/js/materialize.min.js >> assets/js/libs.js
cat node_modules/typed.js/lib/typed.min.js >> assets/js/libs.js
